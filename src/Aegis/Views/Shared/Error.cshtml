@model ErrorViewModel
@{
  ViewData["Title"] = "Error";
}

<div class="account-pages my-5 pt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center mb-5">
                    <h1 class="display-2 fw-medium">5<i class="bx bx-buoy bx-spin text-primary display-3"></i>0</h1>
                    <h4 class="text-uppercase mb-2">Internal Server Error</h4>
                    <p class="text-muted px-4">Something went wrong. Please try again later!</p>
                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted px-4">Request ID: <code>@Model.RequestId</code></p>
                    }
                    <div class="mt-5 text-center">
                        <a class="btn btn-primary waves-effect waves-light" href=@Url.Action("Index", "Home")>Back Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>